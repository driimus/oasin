{
  "name": "oasin",
  "version": "1.0.0",
  "description": "Mixin that combines generated clients for OAS into a single class",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint --ext .ts .",
    "format": "eslint --fix --ext .ts .",
    "ci:version": "changeset version",
    "ci:publish": "changeset publish"
  },
  "keywords": [
    "openapi",
    "openapi-generator",
    "typescript",
    "api",
    "rest"
  ],
  "author": {
    "name": "Cristian Petre",
    "email": "driimus@vivaldi.net"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/driimus/oasin/issues"
  },
  "homepage": "https://github.com/driimus/oasin#readme",
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "@swc/core": "^1.3.2",
    "@swc/jest": "^0.2.22",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "fancy-set": "^0.1.5",
    "jest": "^29.0.3",
    "jest-extended": "^3.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.3"
  },
  "packageManager": "pnpm@7.12.1",
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix"
    ],
    "*.{md,yml,yaml,json}": [
      "prettier --write"
    ]
  }
}
